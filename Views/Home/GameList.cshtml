<p>
    <a asp-controller="Games" asp-action="Index">Add Game</a>
</p>
<table class="table">
    <!--<thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
